<div class="login-content clearfix">
  <span class="video-logo">Be sure to succeed<br>Can achieve goal</span>
  <%= video_tag("videos/sim.mp4", autoplay: true, loop: true, class: 'login-video') %>
</div>
<div class="signup-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="newuser-title">Sign up</h2>
  <div class="newuser-form-area">
    <%= f.label :name ,class: 'newuser-form-label'%><br />
    <%= f.text_field :name, placeholder: '(例）山田　太郎',class: 'short-form' %>
  </div>

  <div class="newuser-form-area">
    <%= f.label :email ,class: 'newuser-form-label'%><br />
    <%= f.email_field :email, placeholder: '（例）@〇〇.com',class: 'short-form' %>
  </div>

  <div class="newuser-form-area">
    <%= f.label :password ,class: 'newuser-form-label' %>
    <%= f.password_field :password, placeholder: '６文字以上',class: 'short-form' %>
  </div>

  <div class="newuser-form-area">
    <%= f.label :password ,class: 'newuser-form-label' %><br/>
    <%= f.password_field :password_confirmation, placeholder: 'パスワードを再入力してください',class: 'short-form'%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: 'submit' %>
  </div>
<% end %>
</div>
